---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section id="contact" class="contact">
  <div class="container">
    <h2 class="section-title">{t('contact.title')}</h2>
    
    <div class="contact-content">
      <div class="contact-info">
        <div class="info-card">
          <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <div class="info">
            <h3>{t('contact.phone')}</h3>
            <p>+1 (555) 123-4567</p>
          </div>
        </div>
        
        <div class="info-card">
          <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <div class="info">
            <h3>{t('contact.email')}</h3>
            <p>contact@villaserenity.com</p>
          </div>
        </div>
        
        <div class="info-card">
          <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <div class="info">
            <h3>{t('contact.availability')}</h3>
            <p>{t('contact.availabilityHours')}</p>
          </div>
        </div>
        
        <div class="booking-info">
          <h3>{t('contact.bookingInfo')}</h3>
          <p>{t('contact.bookingDescription')}</p>
          <ul>
            <li>{t('contact.bookingStep1')}</li>
            <li>{t('contact.bookingStep2')}</li>
            <li>{t('contact.bookingStep3')}</li>
          </ul>
        </div>
      </div>
      
      <div class="contact-form">
        <form>
          <div class="form-group">
            <label for="name">{t('contact.form.name')}</label>
            <input type="text" id="name" name="name" required />
          </div>
          
          <div class="form-group">
            <label for="email">{t('contact.form.email')}</label>
            <input type="email" id="email" name="email" required />
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="checkin">{t('contact.form.checkin')}</label>
              <input type="date" id="checkin" name="checkin" required />
            </div>
            
            <div class="form-group">
              <label for="checkout">{t('contact.form.checkout')}</label>
              <input type="date" id="checkout" name="checkout" required />
            </div>
          </div>
          
          <div class="form-group">
            <label for="guests">{t('contact.form.guests')}</label>
            <select id="guests" name="guests" required>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
            </select>
          </div>
          
          <div class="form-group">
            <label for="message">{t('contact.form.message')}</label>
            <textarea id="message" name="message" rows="4"></textarea>
          </div>
          
          <button type="submit" class="btn">{t('contact.form.submit')}</button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background-color: var(--color-white);
  }
  
  .contact-content {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: var(--space-4);
  }
  
  .contact-info {
    grid-column: span 5;
  }
  
  .contact-form {
    grid-column: span 7;
    background-color: var(--color-gray-100);
    border-radius: var(--radius-lg);
    padding: var(--space-3);
    box-shadow: var(--shadow-md);
  }
  
  .info-card {
    display: flex;
    align-items: center;
    margin-bottom: var(--space-3);
    padding: var(--space-2);
    background-color: var(--color-gray-100);
    border-radius: var(--radius-md);
    transition: transform var(--transition-fast);
  }
  
  .info-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }
  
  .info-card .icon {
    background-color: var(--color-primary-light);
    color: var(--color-white);
    padding: var(--space-1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: var(--space-2);
    min-width: 50px;
    min-height: 50px;
  }
  
  .rtl .info-card .icon {
    margin-right: 0;
    margin-left: var(--space-2);
  }
  
  .info-card .info h3 {
    font-size: 1.1rem;
    margin: 0 0 4px;
  }
  
  .info-card .info p {
    margin: 0;
    color: var(--color-text-light);
  }
  
  .booking-info {
    margin-top: var(--space-3);
    padding: var(--space-2);
    background-color: var(--color-accent);
    border-radius: var(--radius-md);
    border-left: 4px solid var(--color-primary);
  }
  
  .rtl .booking-info {
    border-left: none;
    border-right: 4px solid var(--color-primary);
  }
  
  .booking-info h3 {
    margin-top: 0;
  }
  
  .booking-info ul {
    padding-left: var(--space-2);
    margin-bottom: 0;
  }
  
  .rtl .booking-info ul {
    padding-left: 0;
    padding-right: var(--space-2);
  }
  
  .booking-info li {
    margin-bottom: 8px;
  }
  
  .booking-info li:last-child {
    margin-bottom: 0;
  }
  
  /* Form styles */
  form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2);
  }
  
  label {
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--color-text);
  }
  
  input, select, textarea {
    padding: 12px;
    border: 1px solid var(--color-gray-300);
    border-radius: var(--radius-md);
    background-color: var(--color-white);
    font-family: inherit;
    font-size: 1rem;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }
  
  input:focus, select:focus, textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(0, 128, 128, 0.2);
  }
  
  button[type="submit"] {
    margin-top: var(--space-1);
    padding: 12px;
    font-size: 1rem;
  }
  
  /* Responsive styles */
  @media (max-width: 992px) {
    .contact-content {
      grid-template-columns: 1fr;
    }
    
    .contact-info,
    .contact-form {
      grid-column: span 12;
    }
    
    .contact-info {
      margin-bottom: var(--space-3);
    }
  }
  
  @media (max-width: 576px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>