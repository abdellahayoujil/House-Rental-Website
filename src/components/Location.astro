---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section id="location" class="location">
  <div class="container">
    <h2 class="section-title">{t('location.title')}</h2>
    
    <div class="location-content">
      <div class="map-container">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2888.9329272211!2d-0.6769870482186507!3d43.61835016142926!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd55847a2ff89109%3A0x94d7a8003d7c1ba1!2sBiarritz%2C%20France!5e0!3m2!1sen!2sus!4v1631569483573!5m2!1sen!2sus" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy">
        </iframe>
      </div>
      
      <div class="location-info">
        <div class="address-box">
          <h3>{t('location.address')}</h3>
          <p>15 Rue de l'Oc√©an<br>64200 Biarritz<br>Maroc</p>
        </div>
        
        <div class="nearby-attractions">
          <h3>{t('location.nearbyAttractions')}</h3>
          <ul>
            <li>
              <span class="attraction-name">{t('location.attraction1')}</span>
              <span class="attraction-distance">500m</span>
            </li>
            <li>
              <span class="attraction-name">{t('location.attraction2')}</span>
              <span class="attraction-distance">1.5km</span>
            </li>
            <li>
              <span class="attraction-name">{t('location.attraction3')}</span>
              <span class="attraction-distance">2km</span>
            </li>
            <li>
              <span class="attraction-name">{t('location.attraction4')}</span>
              <span class="attraction-distance">3.5km</span>
            </li>
            <li>
              <span class="attraction-name">{t('location.attraction5')}</span>
              <span class="attraction-distance">5km</span>
            </li>
          </ul>
        </div>
        
        <div class="travel-info">
          <h3>{t('location.travelInfo')}</h3>
          <ul>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 12h-20"></path>
                <path d="M5.45 5.11L2 12v6a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-6l-3.45-6.89A2 2 0 0 0 16.76 4H7.24a2 2 0 0 0-1.79 1.11z"></path>
                <line x1="6" y1="16" x2="6.01" y2="16"></line>
                <line x1="10" y1="16" x2="10.01" y2="16"></line>
              </svg>
              <span>{t('location.airport')}: 15km</span>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="4" y="4" width="16" height="16" rx="2" ry="2"></rect>
                <rect x="9" y="9" width="6" height="6"></rect>
                <line x1="9" y1="1" x2="9" y2="4"></line>
                <line x1="15" y1="1" x2="15" y2="4"></line>
                <line x1="9" y1="20" x2="9" y2="23"></line>
                <line x1="15" y1="20" x2="15" y2="23"></line>
                <line x1="20" y1="9" x2="23" y2="9"></line>
                <line x1="20" y1="14" x2="23" y2="14"></line>
                <line x1="1" y1="9" x2="4" y2="9"></line>
                <line x1="1" y1="14" x2="4" y2="14"></line>
              </svg>
              <span>{t('location.trainStation')}: 2km</span>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 9l6 6-6 6"></path>
                <path d="M4 4l6 6-6 6"></path>
              </svg>
              <span>{t('location.highway')}: 7km</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .location {
    background-color: var(--color-white);
  }
  
  .location-content {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: var(--space-4);
  }
  
  .map-container {
    grid-column: span 7;
    height: 450px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }
  
  .map-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }
  
  .location-info {
    grid-column: span 5;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
  
  .address-box {
    background-color: var(--color-primary-light);
    color: var(--color-white);
    padding: var(--space-3);
    border-radius: var(--radius-md);
  }
  
  .address-box h3 {
    color: var(--color-white);
    margin-bottom: var(--space-1);
  }
  
  .address-box p {
    margin-bottom: 0;
    line-height: 1.6;
  }
  
  .nearby-attractions,
  .travel-info {
    background-color: var(--color-gray-100);
    padding: var(--space-3);
    border-radius: var(--radius-md);
  }
  
  .nearby-attractions h3,
  .travel-info h3 {
    margin-bottom: var(--space-2);
    color: var(--color-primary);
  }
  
  .nearby-attractions ul,
  .travel-info ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .nearby-attractions li {
    display: flex;
    justify-content: space-between;
    padding: 8px 0;
    border-bottom: 1px solid var(--color-gray-200);
  }
  
  .nearby-attractions li:last-child {
    border-bottom: none;
  }
  
  .attraction-name {
    font-weight: 600;
  }
  
  .attraction-distance {
    color: var(--color-text-light);
    font-size: 0.9rem;
  }
  
  .travel-info li {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    padding: 8px 0;
  }
  
  .travel-info svg {
    color: var(--color-primary);
  }
  
  /* Responsive styles */
  @media (max-width: 992px) {
    .location-content {
      grid-template-columns: 1fr;
    }
    
    .map-container,
    .location-info {
      grid-column: span 12;
    }
    
    .map-container {
      height: 350px;
    }
  }
</style>
